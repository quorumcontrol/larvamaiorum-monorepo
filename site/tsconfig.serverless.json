{
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "preserveSymlinks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es5",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": ["es2015", "dom"],
    "rootDir": "./"
  }
}
